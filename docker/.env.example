# brainiac/docker/.env.example
# Copy to .env and fill in your values before running docker compose.

# ---- Ollama ----------------------------------------------------------------
OLLAMA_MODEL=dolphin-llama3
OLLAMA_PORT=11434

# ---- ChromaDB --------------------------------------------------------------
CHROMA_PORT=8000
CHROMA_COLLECTION=brainiac_memory

# ---- MCP Server Ports ------------------------------------------------------
RESEARCH_PORT=8100
VOICE_PORT=8200
SYSTEM_PORT=8300

# ---- Orchestrator ----------------------------------------------------------
MAX_ROUNDS=20
MAX_SEARCH_RESULTS=8

# ---- Voice Server ----------------------------------------------------------
WHISPER_MODEL_SIZE=base   # tiny | base | small | medium | large-v3

# ---- Tailscale (remote access) ---------------------------------------------
# Generate at https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-XXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
